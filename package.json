{
    "name": "telechargement-meteofrance",
    "version": "1.0.0",
    "description": "Téléchargement des données Météo-France",
    "type": "module",
    "main": "index.js",
    "keywords": [
        "Infoclimat",
        "Météo-France"
    ],
    "author": "Jean LECORDIER",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "check": "npm run lint && npm run format",
        "test:unit": "vitest",
        "coverage": "vitest run --coverage",
        "migrate": "prisma migrate dev",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.html": "prettier --write --ignore-unknown",
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write --ignore-unknown",
            "vitest related --run"
        ]
    },
    "dependencies": {
        "@prisma/client": "5.19.0",
        "typescript": "^5.5.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/node": "^22.5.1",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.9.0",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.9",
        "prettier": "^3.3.3",
        "prisma": "^5.19.0",
        "testcontainers": "^10.12.0",
        "typescript-eslint": "^8.3.0",
        "vitest": "^2.0.5"
    }
}
