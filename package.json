{
    "name": "telechargement-climatologie-portail-api-meteofrance",
    "version": "1.0.0",
    "description": "Téléchargement des données de climatologie du portail des APIs Météo-France",
    "type": "module",
    "main": "index.js",
    "keywords": [
        "Infoclimat",
        "Météo-France"
    ],
    "author": "Jean LECORDIER",
    "license": "UNLICENSED",
    "scripts": {
        "check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "test:unit": "vitest --project unit",
        "test:integration": "pnpm run deploy:dev && vitest run --project integration --no-file-parallelism",
        "test:all": "pnpm run deploy:dev && vitest run --no-file-parallelism",
        "test:ci": "pnpm run deploy:dev && vitest run --no-file-parallelism",
        "coverage": "pnpm run deploy:dev && vitest run --coverage",
        "migrate:dev": "prisma migrate dev",
        "deploy:dev": "prisma migrate deploy",
        "deploy:preprod": "dotenv -e .env.preprod -- prisma migrate deploy",
        "prepare": "husky",
        "start-docker": "docker compose --file db/compose.yaml up -d",
        "download-listes-stations": "pnpm run deploy:preprod && dotenv -e .env.preprod -- tsx ./src/apps/downloadListesStations.ts",
        "download-all-informations-stations": "pnpm run deploy:preprod && dotenv -e .env.preprod -- tsx ./src/apps/information-station/downloadAllInformationsStations.ts",
        "download-missing-informations-stations": "pnpm run deploy:preprod && dotenv -e .env.preprod -- tsx ./src/apps/information-station/downloadMissingInformationsStations.ts",
        "download-all-last-horaires-data": "pnpm run deploy:preprod && dotenv -e .env.preprod -- tsx src/apps/horaire/downloadAllLastHorairesData.ts",
        "download-all-last-infrahoraires-data": "pnpm run deploy:preprod && dotenv -e .env.preprod -- tsx src/apps/infrahoraire/downloadAllLastInfrahorairesData.ts"
    },
    "lint-staged": {
        "*.html": "prettier --write --ignore-unknown",
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write --ignore-unknown",
            "pnpm run deploy:dev",
            "vitest related --run --no-file-parallelism"
        ]
    },
    "dependencies": {
        "@prisma/client": "6.4.1",
        "axios": "^1.8.1",
        "dotenv": "^16.4.7",
        "pino": "^9.6.0",
        "typescript": "^5.8.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^22.13.9",
        "dotenv-cli": "^8.0.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.3",
        "prisma": "^6.4.1",
        "testcontainers": "^10.18.0",
        "tsx": "^4.19.3",
        "typescript-eslint": "^8.26.0",
        "vitest": "^3.0.7"
    }
}
